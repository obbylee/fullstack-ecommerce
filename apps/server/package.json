{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "zod": "^3.24.2",
    "@trpc/server": "^11.0.0",
    "@trpc/client": "^11.0.0",
    "@hono/trpc-server": "^0.3.4",
    "hono": "^4.7.6"
  },
  "devDependencies": {
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6"
  }
}
